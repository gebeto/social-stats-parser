{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "verbatimModuleSyntax": true,
    "moduleResolution": "node",
    "outDir": "dist/esm",
    "types": [],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
  }
}
